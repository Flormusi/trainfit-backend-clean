{
  "name": "trainfit-backend",
  "version": "1.0.0",
  "description": "Backend for TrainFit application",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon --exec npx ts-node --transpile-only --project tsconfig.json src/server.ts",
    "build": "tsc",
    "test": "jest",
    "start:dev": "NODE_ENV=development nodemon --exec npx ts-node --transpile-only --project tsconfig.json src/server.ts",
    "start:staging": "NODE_ENV=staging nodemon --exec npx ts-node --transpile-only --project tsconfig.json src/server.ts",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "ops:backup": "node create_backup.js",
    "ops:reset:dev": "NODE_ENV=development ALLOW_DESTRUCTIVE_ACTIONS=true CONFIRM_RESET=YES node ops/safe_migrate_reset.js --approve --token=$APPROVAL_TOKEN",
    "ops:sql:delete_clients:dev": "NODE_ENV=development ALLOW_DESTRUCTIVE_ACTIONS=true CONFIRM_SQL=YES node ops/safe_run_sql.js scripts/delete_clients.sql --approve --token=$APPROVAL_TOKEN",
    "ops:token:rotate:dev": "NODE_ENV=development node ops/rotate_approval_token.js --approve --token=$APPROVAL_TOKEN",
    "ops:token:rotate:staging": "NODE_ENV=staging node ops/rotate_approval_token.js --approve --token=$APPROVAL_TOKEN"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^6.0.3",
    "nodemon": "^3.1.10",
    "prisma": "^6.8.2",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@prisma/client": "^6.8.2",
    "@types/joi": "^17.2.2",
    "@types/multer": "^2.0.0",
    "@types/nodemailer": "^6.4.19",
    "axios": "^1.6.0",
    "bcryptjs": "^3.0.2",
    "chart.js": "^4.5.0",
    "cloudinary": "^2.7.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.19.2",
    "express-async-handler": "^1.2.0",
    "googleapis": "^160.0.0",
    "ics": "^3.8.1",
    "ipaddr.js": "^2.2.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mercadopago": "^2.9.0",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.6",
    "react-chartjs-2": "^5.3.0",
    "socket.io": "^4.8.1",
    "stripe": "^18.4.0",
    "winston": "^3.17.0"
  }
}
