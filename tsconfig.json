{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2015", "ES2017", "ES2020", "DOM"],
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types",
      "./src/types/express"
    ]
  },
  "include": [
    "src/**/*",
    "middleware/**/*",
    "models/**/*",
    "controllers/**/*",
    "routes/**/*",
    "server.ts",
    "prisma/**/*",
    "src/types/**/*" // <--- LÃNEA AGREGADA
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/tests"
  ]
}