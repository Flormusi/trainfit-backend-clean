{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2015", "ES2017", "ES2020", "DOM"],
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types",
      "./src/types/express"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/legacy/**/*",
    "node_modules",
    "dist"
  ]
}